# Railway Dockerfile для Telegram бота с ChatGPT + Whisper
FROM python:3.11-slim

# Устанавливаем системные зависимости включая FFmpeg
RUN apt-get update && apt-get install -y \
    ffmpeg \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Создаем рабочую директорию
WORKDIR /app

# Копируем requirements.txt и устанавливаем Python зависимости
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Копируем весь код приложения
COPY . .

# Создаем директории для временных файлов
RUN mkdir -p routers/chatgpt_module/temp_audio
RUN mkdir -p routers/audio_transcription_module/temp_audio

# Устанавливаем переменную окружения для Railway
ENV PYTHONUNBUFFERED=1

# Railway автоматически устанавливает PORT, используем его
CMD python bot.py 